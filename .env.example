# Basis-URL des RSS-Feeds
FEED_URL=https://dasnetzundich.de/category/anleitung/feed/

# Mindestalter der Beiträge in Tagen
DAYS_OLD=180

# Maximale Anzahl der zu verarbeitenden Beiträge (0 = alle)
MAX_POSTS=0

# Datei, in der bereits gepostete URLs festgehalten werden
POSTED_LOG_PATH=./posted_urls.json

# Sharkey/Misskey-Instanz und Token für die Veröffentlichung
SHARKEY_INSTANCE_URL=https://example.social
SHARKEY_TOKEN=dein-api-token

# Sichtbarkeit der Notiz (z. B. public, home, followers)
SHARKEY_VISIBILITY=public

# OpenAI-Konfiguration für die Textgenerierung (optional)
OPENAI_API_KEY=dein-openai-key
OPENAI_MODEL=gpt-5-mini
